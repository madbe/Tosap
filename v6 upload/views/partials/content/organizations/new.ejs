<h1>Create an Organization</h1>
   
<section class="middle-box text-center loginscreen animated fadeInDown">
  <div>
    <% if(error != 'null') { %>
      <p> ERROR: <%= error %></p>
    <% } %>
  </div> 
  
  <form class="m-t" role="form" method="post">  <!--action="/bo/org"-->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <div class="form-group">
      <input class="form-control" placeholder="Organization Name" type="text" name="org[Name]" required="required"/>
    </div>
    <div class="form-group">
      <input class="form-control" placeholder="User email" type="email" name="org[userEmail]" required="required"/>
    </div>
    <button type="submit" class="btn btn-primary full-width block m-b"/>Add Organization</button>
  </form>
</section>