<h1>Log Into Your Account</h1>


<section class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <% if(error != 'null') { %>
	        <p> ERROR: <%= error %></p>
        <% }; %>
    </div>
    <form class="m-t" role="form" method="post">   
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="form-group">
            <input class="form-control" placeholder="Email" type="email" name="email" required="required"/><br/>
        </div>
        <div class="form-group">
            <input class="form-control" placeholder="Password" type="password" name="password" required="required"/><br/>
        </div>
        <button type="submit" class="btn btn-primary full-width block m-b"/>Login</button>
        <a href="#"><small>Forgot password?</small></a>
    </form>
</section>